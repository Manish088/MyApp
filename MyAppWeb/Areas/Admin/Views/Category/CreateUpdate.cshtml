@*@model MyApp.Models.Category*@
@model MyApp.Models.ViewModels.CategoryVM
@*@model Category*@
@{
    ViewData["Title"] = "Edit";
}


<form  method="post">
 
   <div class="border p-3 mt-4">
       <div class="row pb-3">

           <h2 class="text-danger">@((Model.Category==null || Model.Category.Id==0)? "Create":"Update") Category</h2>
           <hr />
       </div>

    <input type="hidden" asp-for="Category.Id" />
  
    <div class="form-group m-10" >
      <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-6">
            <input type="text"  class="form-control" id="name" asp-for="Category.Name" >
              <span asp-validation-for="Category.Name" class="text-danger"></span>
      </div>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Order Number</label>
       <div class="col-sm-6">
            <input type="number"  class="form-control" id="onum" asp-for="Category.DisplayOrder">
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
      </div>
      @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div> 

        @if(Model.Category==null || Model.Category.Id==0)
        {
            
            <button type="submit" class="btn btn-primary" style="margin-top:10px;">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary" style="margin-top:10px;">Update</button> 
        }


  </div>
  
  <a asp-controller="Category" asp-action="ViewCategory">Back to List</a>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

